@{
    ViewBag.Title = "ProductCatalog";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
<h2>ProductCatalog</h2>
<div class="box">
    <div class="box-body">
        <table class="table table-responsive display" id="e-table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Product Code</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Unit Of Measure</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        var d=$("#e-table").DataTable({
            "ajax": {
                "url": "/Product/GetProductList",
                "type": "POST",
                //"data": function (data) {
                //},
                "datatype": "json",
            },
            "columns": [
                {
                    "data": "ProductId",
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                },
                {
                    "data": "ProductId"
                },
                { "data": "Category" },
                { "data": "Description" },
                { "data": "Unit" }
                //{
                //    "data": "Id",
                //    "searchable": false,
                //    "sortable": false,
                //    "render": function (data) {
                //        return "<a href='/Containers/ResultDetail?id=" + data + "'>Details</a>"
                //    }
                //}

            ],

            "serverSide": "true",
            "order": [0, "asc"],
            "processing": "true"
        });

        //$('#e-tab tbody').on('click', 'button', function () {
        d.on('order.dt search.dt', function () {
            d.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
        $("#vSearch").click(function () {
            d.ajax.reload();

        });
    });
</script>
