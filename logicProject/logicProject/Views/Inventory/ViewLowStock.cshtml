@using logicProject.Models.EF;
@model logicProject.Models.EF.Product


@{
    ViewBag.Title = "ViewInventory";
    Layout = "~/Views/Inventory/_ClerkLayout.cshtml";
    List<Product> items = (List<Product>)ViewData["items"];
    //Written by Udaya
}

@section Styles {

    <link rel="stylesheet" href="https://max.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
}

<h2>Low Stock Inventory</h2>

<table id="low_stock_table" class="table table-striped table-bordered table-sm table-responsive table-hover cell-border">
    <thead>
        <tr>
            <td>
                Product code
            </td>
            <td>
                Category
            </td>
            <td>
                Description
            </td>
            <td>
                Unit of Measure
            </td>
            <td>
                Qty
            </td>
            <td>
                Reorder Level
            </td>
            <td>
                Reorder Quantity
            </td>
        </tr>
    </thead>

    @if (items != null)
    {
        foreach (var item in items)
        {
            <tr>
                <td>
                    @item.ProductId
                </td>
                <td>
                    @item.Category
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Unit
                </td>
                <td>
                    @item.Qty
                </td>
                <td>
                    @item.ReorderLevel
                </td>
                <td>
                    @item.ReorderQty
                </td>
            </tr>
        }
    }

</table>

@section Scripts {

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#low_stock_table').DataTable();
        })
    </script>
}
