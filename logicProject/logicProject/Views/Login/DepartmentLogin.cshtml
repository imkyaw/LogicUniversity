@model logicProject.Models.EF.DepartmentStaff
    @{
        Layout = "";
        ViewBag.Title = "DepartmentLogin";
    }
<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>AdminLTE 2 | Log in</title>
        <!-- Tell the browser to be responsive to screen width -->
        <link rel="stylesheet" href="~/Content/bootstrap.min.css">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/my-admin-lte/plugins/font-awesome/css/font-awesome.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="~/my-admin-lte/plugins/Ionicons/">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/my-admin-lte/css/AdminLTE.min.css">

        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    </head>
    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                <a href="../../index2.html"><b>LOGIC</b></a>
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Sign in to start your session</p>
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <label>Username: </label>
                        @Html.TextBoxFor(x => x.Username, new { Name = "username", Class = "form-control" })
                        <span class="validation text-danger">@Html.ValidationMessageFor(x => x.Username)</span>
                    </div>
                    <div class="form-group">
                        <label>Password: </label>
                        @Html.PasswordFor(x => x.Password, new { Name = "password", Class = "form-control" })
                        <span class="validation text-danger">@Html.ValidationMessageFor(x => x.Password)</span>
                    </div>
                    <div class="">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                }

                <!-- /.social-auth-links -->
                <a href="#">I forgot my password</a><br>
                @*<a href="register.html" class="text-center">Register a new membership</a>*@
            </div>
            <!-- /.login-box-body -->
        </div>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    </body>
</html>


